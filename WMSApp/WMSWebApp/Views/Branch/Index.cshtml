            //    attributes: { style: "text-align:center" },
            //    template: '#if(BookingStatus=="PENDING"){#<a href="@(Url.Action("RejectBooking","AgentBooking"))/?id=#=ID#" class="btn btn-danger">Reject</a>#}#',
            //    width: 100
            //},

            ],

        });
    </script>
	}
