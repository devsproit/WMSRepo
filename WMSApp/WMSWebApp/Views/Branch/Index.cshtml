    <script>
        function additionalData() {
            var data = {
                //userid: $("#hdnAgentID").val(),
                //pnr: $("#pnr").val(),
                //bookingRefNo: $("#bookingRefNo").val(),
                //email: $("#email").val(),
                //mobile: $("#mobile").val(),
                //fromDate: $("#fromDate").val(),
                //toDate: $("#toDate").val(),
                //apisource:$("#apisource").val()
            }
            addAntiForgeryToken(data);
            return data;
        }

        var initialLoad = true;
        $("#branch-grid").kendoGrid({

            toolbar: ["excel"],
            excel: {
                fileName: "branch Export.xlsx",
                proxyURL: "@Html.Raw(Url.Action("List", "Branch"))",
                filterable: true
            },
            dataSource: {

                transport: {
                    read: {
                        url: "@Html.Raw(Url.Action("List", "Branch"))",
                        type: "POST",
                        dataType: "json",
                        data: additionalData,
                        complete: function(result) {
                            console.log("Remote built-in transport", result);
                            if (result.status == 401) {
                                document.location.href = "@Html.Raw(Url.Action("Index", "AccessDenied"))";
                            }
                        }

                    }
                },
                schema: {
                    data: "Data",
                    total: "Total",
                    errors: "Errors"
                },
                error: function(e) {
                    //display_kendoui_grid_error(e);
                    // Cancel the changes
                    console.log(e)
                    this.cancelChanges();
                },
                pageSize: 20,
                sortable: true,
                serverPaging: true,
                serverSorting: true,
                requestStart: function() {
                    if (initialLoad) //<-- if it's the initial load, manually start the spinner
                        kendo.ui.progress($("#branch-grid"), true);
                },
                requestEnd: function() {
                    if (initialLoad)
                        kendo.ui.progress($("#branch-grid"), false);
                    initialLoad = false; //<-- make sure the spinner doesn't fire again (that would produce two spinners instead of one)

                },

            },
            pageable: {
                refresh: true,
                pageSizes: true
            },
            excel: {
                allPages: true
            },
            scrollable: false,
            columns: [{
                field: "Id",
                title: "ID",
                width: 50
            },
            {
                field: "BranchCode",
                title: "BranchCode",
                width: 50
            },

            {
                field: "BranchName",
                title: "BranchName",
                width: 300
            },
            {
                field: "CompanyName",
                title: "CompanyName",
                encoded: false,
                width: 300
            },
            {
                field: "Werehouse",
                title: "Werehouse",
                width: 300
            },
            {
                field: "UserName",
                title: "UserName",
                width: 120
            },
           
           
           
          
            {
                field: "EmailIdBranch",
                title: "EmailId",
                width: 50
            },

            {
                field: "Address",
                title: "Address",
                width: 300
            },
            {
                field: "Location",
                title: "Location",
                width: 50
            },
           
            {
                field: "ContactNumberBranch",
                title: "Contact",
                width: 50
            },
           

            {
                title: "Action",
                headerAttributes: { style: "text-align:center" },
                template: '<a href="@(Url.Action("Edit","Branch"))/?id=#=Id#" class="btn btn-primary">Edit</a>',
                width: 100
            },
            //{
            //    title: "Action",
            //    headerAttributes: { style: "text-align:center" },
            //    attributes: { style: "text-align:center" },
            //    template: '<a href="@(Url.Action("CancelTicket","AgentBooking"))/?id=#=ID#" class="btn btn-danger">Cancel</a>',
            //    width: 100
            //},
            //{
            //    title: "Action",
