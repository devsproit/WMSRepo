    <li class="flex">
      <div class="flex items-center">
        <a href="#" class="text-gray-400 hover:text-gray-500">
          <!-- Heroicon name: solid/home -->
          <svg class="flex-shrink-0 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
          </svg>
          <span class="sr-only">Home</span>
        </a>
      </div>
    </li>

    <li class="flex">
      <div class="flex items-center">
        <svg class="flex-shrink-0 w-6 h-full text-gray-200" viewBox="0 0 24 44" preserveAspectRatio="none" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <path d="M.293 0l22 22-22 22h1.414l22-22-22-22H.293z" />
        </svg>
        <a href="#" class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700">Branch</a>
      </div>
    </li>
  </ol>
    </nav>
    <div class="p-10">
        <div class="flex justify-between">
          <div class="min-w-0">
            <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">Branch List Details</h2>
          </div>
          <div class="mt-4 md:mt-0 md:ml-4">
            <a asp-action="Create" class="ml-3 inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium text-white bg-blue-900 hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Create New Branch</a>
          </div>
        </div>
    </div>
</div>
 <div class="mt-10 text-gray-900 tracking-wider leading-normal px-10">
    <div class="container w-full mx-auto px-2">
     <div id='recipients' class="mt-6 lg:mt-0 rounded bg-white  overflow-x-auto">
      <table id="example" class="stripe hover" style="width:100%; padding-top: 1em;  padding-bottom: 1em;">
        <thead>
          <tr id="table_row">
            <th>
             @Html.DisplayNameFor(model => model.ScreenCode)
         </th>
         <th>
             @Html.DisplayNameFor(model => model.BranchCode)
         </th>
         <th>
             @Html.DisplayNameFor(model => model.BranchName)
         </th>
         <th>
             @Html.DisplayNameFor(model => model.CompanyId)
         </th>
         <th>
             @Html.DisplayNameFor(model => model.Address)
         </th>
         <th>
             @Html.DisplayNameFor(model => model.Location)
         </th>
         <th>
             @Html.DisplayNameFor(model => model.ContactPersonBranch)
         </th>
         <th>
             @Html.DisplayNameFor(model => model.ContactNumberBranch)
         </th>
         <th>
             @Html.DisplayNameFor(model => model.EmailIdBranch)
         </th>
         <th>
             @Html.DisplayNameFor(model => model.AssociatedEmployee)
         </th>
         <th>
             @Html.DisplayNameFor(model => model.WarehouseId)
         </th>
                                       
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
        <tr>
             <td>
                @Html.DisplayFor(modelItem => item.ScreenCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BranchCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BranchName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactPersonBranch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumberBranch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailIdBranch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssociatedEmployee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WarehouseId)
            </td>

            <td>
                <a asp-action="Edit" class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium text-blue-700 bg-blue-100 hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Edit Branch</a>
                <a asp-action="Details" class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium text-blue-700 bg-blue-100 hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">View Details</a>
                <a asp-action="Delete" class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium text-red-700 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">Delete Branch</a>
            </td>
        </tr>
}
        </tbody>
      </table>
    </div>
    </div>
  </div>

  @section Scripts{
  	<!--Datatables -->
	<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
	<script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
	<script>
		$(document).ready(function() {
		let table = $('#example').DataTable( {
				responsive: true
			})
			.columns.adjust()
			.responsive.recalc();
	} );
	$(document).ready(function() {
		let table = $('#example2').DataTable( {
				responsive: true
			})
			.columns.adjust()
			.responsive.recalc();
	} );
	</script>
