@using Domain.Model
@model List<Branch>
@{
    ViewData["Title"] = "GRNReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Style{
    <link href="~/lib/kendoUi/2021/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="~/lib/kendoUi/2021/styles/kendo.rtl.min.css" rel="stylesheet" />
    <link href="~/lib/kendoUi/2021/styles/kendo.default.min.css" rel="stylesheet" />
    <link href="~/lib/kendoUi/2021/styles/kendo.default.mobile.min.css" rel="stylesheet" />
    <link href="/lib/jquery-ui/jquery-ui.css" rel="stylesheet"/>

}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>GRN List</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Report</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">GRN </h3>

                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            
                            <div class="row">
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>Branch</label>
                                        <select class="form-control" asp-items="@(new SelectList(Model,"BranchCode","BranchName"))"></select>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>From</label>
                                        <input id="fromDate" type="text" readonly class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>To</label>
                                        <input id="toDate" type="text" readonly class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2 row">
                                <button id="search" class="btn btn-primary">Search</button>
                            </div>
                            <br />
                            <div id="grn-grid">
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
            </div>
        </div>
    </section>


    @section Scripts{
    <environment include="Development">
        <script src="~/lib/kendoUi/2021/js/kendo.all.min.js"></script>
        <script src="~/lib/kendoUi/2021/js/jszip.min.js"></script>
        <script src="~/js/common.js"></script>
        <script src="/lib/jquery-ui/jquery-ui.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/kendoUi/2021/js/kendo.all.min.js"></script>
        <script src="~/lib/kendoUi/2021/js/jszip.min.js"></script>
        <script src="~/js/common.min.js"></script>
        <script src="/lib/jquery-ui/jquery-ui.min.js"></script>

    </environment>

    <script>
        function additionalData() {
            var data = {

                branchCode: $("#branchCode").val(),
                fromDate: $("#fromDate").val(),
                toDate: $("#toDate").val(),

            }
            addAntiForgeryToken(data);
            return data;
        }
        $(document).ready(function() {

            $("#fromDate,#toDate").datepicker();
            $("#search").click(function() {
                var grid = $('#grn-grid').data('kendoGrid');
                grid.dataSource.page(1);
            });
            var initialLoad = true;
            $("#grn-grid").kendoGrid({

                toolbar: ["excel"],
                excel: {
                    fileName: "RGN Data.xlsx",
                    proxyURL: "@Html.Raw(Url.Action("GRNReport", "Report"))",
                    filterable: true
                },
                dataSource: {

                    transport: {
                        read: {
                            url: "@Html.Raw(Url.Action("GRNReport", "Report"))",
                            type: "POST",
                            dataType: "json",
                            data: additionalData,
                            complete: function(result) {
                                console.log("Remote built-in transport", result);
                                if (result.status == 401) {
                                    document.location.href = "@Html.Raw(Url.Action("Index", "AccessDenied"))";
                                }
                            }

                        }
                    },
                    schema: {
                        data: "Data",
                        total: "Total",
                        errors: "Errors"
                    },
                    error: function(e) {
                        //display_kendoui_grid_error(e);
                        // Cancel the changes
                        console.log(e)
                        this.cancelChanges();
                    },
                    pageSize: 20,
                    sortable: true,
                    serverPaging: true,
                    serverSorting: true,
                    requestStart: function() {
                        if (initialLoad) //<-- if it's the initial load, manually start the spinner
                            kendo.ui.progress($("#grn-grid"), true);
                    },
                    requestEnd: function() {
                        if (initialLoad)
                            kendo.ui.progress($("#grn-grid"), false);
                        initialLoad = false; //<-- make sure the spinner doesn't fire again (that would produce two spinners instead of one)

                    },

                },
                pageable: {
                    refresh: true,
                    pageSizes: true
                },
                excel: {
                    allPages: true
                },
                scrollable: false,
                columns: [{
                    field: "Id",
                    title: "ID",
                    width: 50
                },
                  {
                    field: "PONo",
                    title: "PONo",
                    width: 50
                },
                {
                    field: "BranchCode",
                    title: "BranchCode",
                    width: 50
                },

                {
                    field: "InvoiceNo",
                    title: "InvoiceNo",
                    width: 300
                },
                {
                    field: "InvoiceDate",
                    title: "InvoiceDate",
                 
                    width: 300
                },
                {
                    field: "SenderCompany",
                    title: "SenderCompany",
                    width: 300
                },
                {
                    field: "ItemCode",
                    title: "ItemCode",
                    width: 120
                },




                {
                    field: "SubItemCode",
                    title: "SubItemCode",
                    width: 50
                },

                {
                    field: "SubItemName",
                    title: "SubItemName",
                    width: 300
                },
                {
                    field: "MaterialDescription",
                    title: "MaterialDescription",
                    width: 300
                },

                {
                    field: "Qty",
                    title: "Qty",
                    width: 50
                },

                     {
                    field: "Unit",
                    title: "Unit",
                    width: 50
                },

                     {
                    field: "Amount",
                    title: "Amount",
                    width: 50
                },
                     {
                    field: "Area",
                    title: "Area",
                    width: 50
                },
                ],

            });
        });

    </script>
}


