@using Microsoft.AspNetCore.Identity
@inject RoleManager<IdentityRole> _roleManager

@{
    ViewData["Title"] = "RoleList";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var roles = _roleManager.Roles.ToList();
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>
                    Role
                    @*<small>new</small>*@
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Master</a></li>
                    <li class="breadcrumb-item active">Role List</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-edit"></i>
                            Role
                        </h3>
                    </div>
                    <div class="card-body">

                       <div class="box">
                    <div class="box-header">
                       


                        <div class="box-footer">
                            <a asp-action="CreateRole" asp-controller="PermissionMaster" method="" class="btn btn-primary">Add New</a>
                        </div>

                    </div>
                    <!-- /.box-header -->
                    <div class="box-body table-responsive">
                        <table id="example1" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th></th>

                                    <th>Name</th>
                                    <th>Normalized Name</th>
                                    <th>Concurrency Stamp</th>
                                    <th>Edit</th>

                                </tr>
                            </thead>
                            <tbody>
                                @{int RowNo = 0;}


                                @foreach (var item in roles)
                                {
                                    <tr>
                                        <td>@{RowNo++;} @RowNo</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NormalizedName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ConcurrencyStamp)
                                        </td>

                                        <td> <a asp-action="UpdateRole" asp-controller="PermissionMaster"  asp-route-id="@item.Id"><i class="fa fa-edit" aria-hidden="true"></i></a></td>
                                        @*<td><i class="fa fa-trash-o" aria-hidden="true"></i></td>*@
                                    </tr>
                                }



                            </tbody>
                            @*<tfoot>
                                    <tr>
                                        <th></th>

                                        <th>PermissionMaster</th>
                                        <th>CreateOn</th>
                                        <th>Edit</th>

                                    </tr>
                                </tfoot>*@
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                    </div>
                    <!-- /.card -->
                </div>


            </div>
            <!-- /.col -->
        </div>
        <!-- ./row -->
    </div><!-- /.container-fluid -->







</section>