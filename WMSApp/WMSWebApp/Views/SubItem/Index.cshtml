@model IEnumerable<WMSWebApp.ViewModels.SubItem>

@{
    ViewData["Title"] = "Index";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>SubItem List</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Master</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Subitem List</h3>
                    </div>
                    <div class="card-body table-responsive p-0" style="height: 300px;">
                        <table class="table table-head-fixed text-nowrap">
                            <thead>
                                <tr>

                                    <th>
                                        @Html.DisplayNameFor(model => model.Id)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SubItemCode)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SubItemName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ItemId)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.MaterialDescription)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.SubItemSize)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.FOC)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.SubItemCategory)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.SubItemSR)
                                    </th>


                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SubItemCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SubItemName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ItemId)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.MaterialDescription)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.SubItemSize)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.FOC)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.SubItemCategory)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.SubItemSR)
                                        </td>


                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new {  id=item .Id }) |
                                            @*@Html.ActionLink("Details", "Details", new {  id=item.PrimaryKey */ }) |*@
                                            @Html.ActionLink("Delete", "Delete", new {  id=item.Id  })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Create" class="btn btn-primary">Create New</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


