@model IEnumerable<WMSWebApp.ViewModels.Company>

@{
    ViewData["Title"] = "Index";
}
@* Delete this below CSS File after revamping is done. *@


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Companies List</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Master</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Companyes List</h3>

                        <div class="card-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body table-responsive p-0" style="height: 300px;">
                        <table class="table table-head-fixed text-nowrap">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Id)
                                    </th>
                                    @*<th>
                                    @Html.DisplayNameFor(model => model.ScreenCode)
                                    </th>*@
                                    <th>
                                        @Html.DisplayNameFor(model => model.CompanyCode)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CompanyName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Address)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Location)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ContactPersonHO)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ContactNumberHO)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EmailIdHO)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SpaceSizeFormat)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Items)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SubItem)
                                    </th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.ActionLink(String.Format("{0}",item.Id), "Edit", new {  id=item.Id })
                                            @*@Html.DisplayFor(modelItem => item.Id)*@
                                        </td>
                                        @*<td>
                                    @Html.DisplayFor(modelItem => item.ScreenCode)
                                    </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CompanyCode)
                                        </td>
                                        <td>
                                            @*@Html.ActionLink(item.CompanyName, "Edit", new {  id=item.Id })*@
                                            @Html.DisplayFor(modelItem => item.CompanyName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Location)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ContactPersonHO)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ContactNumberHO)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmailIdHO)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SpaceSizeFormat)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Items)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SubItem)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new {  id=item.Id }) |
                                            @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                                            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

